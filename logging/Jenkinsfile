pipeline {
    agent any

    stages {
        stage('Clean Containers') {
            steps {
                dir("logging") {
                    script {
                        try {
                            sh 'sudo docker compose -p logging down'
                        } finally {
                        }
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                dir("logging") {
                    sh 'sudo docker compose -p logging up -d'
                }
            }
        }
    }
}
