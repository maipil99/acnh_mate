pipeline {
    agent any
    parameters {
        run filter: 'SUCCESSFUL', name: 'PROMOTED_BUILD', projectName: 'ACNH Mate'
    }
    stages {
        stage("Deploy") {
            steps{
                sh "sudo docker compose --env-file config/prod.env pull"
                sh "sudo docker compose --env-file config/prod.env up -d"
            }
        }
    }
}